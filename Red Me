        .animate-on-scroll {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
            transition: all 0.6s ease;
        }
        
        .animate-on-scroll.animated {
            opacity: 1;
            transform: translateY(0) scale(1);
            animation: elementAppear 1s ease-out 4s both;
        }
        
