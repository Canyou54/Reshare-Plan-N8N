    <script>
        const slides = document.querySelectorAll('.container');
        const dotsContainer = document.getElementById('navDots');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const progressBar = document.getElementById('slide-progress');
        
        let currentSlide = 0;
        
        slides.forEach((_, index) => {
            const dot = document.createElement('div');
            dot.classList.add('dot');
            dot.addEventListener('click', () => goToSlide(index));
            dotsContainer.appendChild(dot);
        });
        
        function updateSlide() {
            slides.forEach(slide => {
                slide.classList.remove('active');
            });
            
            slides[currentSlide].classList.add('active');
            
            document.querySelectorAll('.dot').forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSlide);
            });
            
            const progress = ((currentSlide + 1) / slides.length) * 100;
            progressBar.style.width = `${progress}%`;
            
            prevBtn.disabled = currentSlide === 0;
            nextBtn.disabled = currentSlide === slides.length - 1;
        }
        
        function goToSlide(index) {
            if (index >= 0 && index < slides.length) {
                currentSlide = index;
                updateSlide();
            }
        }
        
        function nextSlide() {
            if (currentSlide < slides.length - 1) {
                currentSlide++;
                updateSlide();
            }
        }
        
        function prevSlide() {
            if (currentSlide > 0) {
                currentSlide--;
                updateSlide();
            }
        }
        
        prevBtn.addEventListener('click', prevSlide);
        nextBtn.addEventListener('click', nextSlide);
        
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === 'ArrowUp') {
                prevSlide();
            } else if (e.key === 'ArrowLeft' || e.key === 'ArrowDown') {
                nextSlide();
            }
        });
        
        // Simulation functions
        let hrWorkflowActive = false;
        let hrRequests = 0;
        let chatActive = false;
        let chatMessages = [];
        
        function startHRWorkflow() {
            hrWorkflowActive = true;
            const output = document.getElementById('hr-demo-output');
            if (output) {
                output.innerHTML = `
                    <span style="color: var(--secondary);">▶️ جاري بدء معالجة طلبات الموظفين...</span><br>
                    ✅ تم تفعيل مشغل البريد الإلكتروني<br>
                    🤖 وكيل AI جاهز لتحليل الطلبات<br>
                    💾 PostgreSQL متصل ويعمل<br>
                    📢 إشعارات Slack مفعلة
                `;
            }
            
            const dataFlow = document.getElementById('hr-data-flow');
            if (dataFlow) {
                dataFlow.style.animation = 'dataFlow 3s infinite linear';
            }
            
            setTimeout(() => {
                if (output) {
                    output.innerHTML += '<br><br>✅ النظام جاهز لاستقبال الطلبات';
                }
            }, 2000);
        }
        
        function simulateHRRequest() {
            if (!hrWorkflowActive) {
                alert('الرجاء بدء تشغيل النظام أولاً!');
                return;
            }
            
            hrRequests++;
            const requests = [
                'طلب إجازة مرضية لمدة ٣ أيام',
                'تعديل بيانات الراتب',
                'طلب تدريب في مجال الذكاء الاصطناعي',
                'تقرير أداء ربع سنوي',
                'طلب معدات مكتبية جديدة'
            ];
            
            const randomRequest = requests[Math.floor(Math.random() * requests.length)];
            const output = document.getElementById('hr-demo-output');
            
            if (output) {
                output.innerHTML = `
                    📥 <strong>طلب جديد:</strong> ${randomRequest}<br>
                    🔍 <span style="color: var(--secondary);">جاري تحليل الهدف باستخدام OpenAI...</span><br>
                    🤖 <span style="color: var(--secondary);">وكيل AI يحدد نوع الطلب</span><br>
                    💾 <span style="color: var(--secondary);">جاري تحديث قاعدة البيانات...</span><br>
                    📢 <span style="color: var(--secondary);">تم إرسال الإشعار إلى القسم المختص</span><br>
                    ✅ <strong style="color: var(--accent);">تمت معالجة الطلب بنجاح!</strong>
                `;
            }
            
            document.getElementById('hr-requests').textContent = 350 + hrRequests;
        }
        
        function resetHRWorkflow() {
            hrWorkflowActive = false;
            hrRequests = 0;
            const dataFlow = document.getElementById('hr-data-flow');
            if (dataFlow) {
                dataFlow.style.animation = 'none';
            }
            const output = document.getElementById('hr-demo-output');
            if (output) {
                output.innerHTML = '⏳ جاهز للبدء... اضغط "بدء المعالجة"';
            }
            document.getElementById('hr-requests').textContent = '350';
        }
        
        function startCustomerService() {
            chatActive = true;
            chatMessages = [
                { sender: 'bot', text: 'مرحباً! أنا مساعد خدمة العملاء الذكي. كيف يمكنني مساعدتك اليوم؟' }
            ];
            updateChatDisplay();
        }
        
        function sendCustomerMessage() {
            if (!chatActive) {
                alert('الرجاء بدء المحادثة أولاً!');
                return;
            }
            
            const customerMessages = [
                'أريد معرفة حالة طلبي',
                'لدي مشكلة في المنتج',
                'كيف يمكنني تغيير كلمة المرور؟',
                'أحتاج فاتورة الشراء',
                'ما هي ساعات العمل؟'
            ];
            
            const randomMessage = customerMessages[Math.floor(Math.random() * customerMessages.length)];
            chatMessages.push({ sender: 'customer', text: randomMessage });
            
            setTimeout(() => {
                const botResponses = [
                    'جاري البحث عن معلومات طلبك...',
                    'سأقوم بتحويلك إلى القسم المختص.',
                    'يمكنك تغيير كلمة المرور من الإعدادات.',
                    'سأرسل الفاتورة إلى بريدك الإلكتروني.',
                    'ساعات العمل من ٩ صباحاً إلى ٦ مساءً.'
                ];
                
                const botResponse = botResponses[customerMessages.indexOf(randomMessage)] || 'شكراً لتواصلك معنا. سأساعدك في ذلك.';
                chatMessages.push({ sender: 'bot', text: botResponse });
                updateChatDisplay();
            }, 1000);
            
            updateChatDisplay();
        }
        
        function escalateToHuman() {
            if (!chatActive) return;
            chatMessages.push({ 
                sender: 'system', 
                text: '📞 تم تحويل المحادثة إلى موظف خدمة العملاء. سيتواصل معك قريباً.' 
            });
            updateChatDisplay();
        }
        
        function updateChatDisplay() {
            const output = document.getElementById('chat-demo-output');
            if (!output) return;
            
            let html = '';
            chatMessages.forEach(msg => {
                if (msg.sender === 'bot') {
                    html += `<div style="text-align: right; margin: 8px 0; padding: 8px; background: rgba(46, 204, 113, 0.1); border-radius: 8px; border-right: 2px solid var(--accent);">
                        <strong>🤖 المساعد:</strong> ${msg.text}
                    </div>`;
                } else if (msg.sender === 'customer') {
                    html += `<div style="text-align: left; margin: 8px 0; padding: 8px; background: rgba(52, 152, 219, 0.1); border-radius: 8px; border-left: 2px solid var(--secondary);">
                        <strong>👤 العميل:</strong> ${msg.text}
                    </div>`;
                } else {
                    html += `<div style="text-align: center; margin: 8px 0; padding: 8px; background: rgba(231, 76, 60, 0.1); border-radius: 8px;">
                        <strong>📢 ${msg.text}</strong>
                    </div>`;
                }
            });
            output.innerHTML = html;
        }
        
        function switchToEnglish() {
        }
        
        updateSlide();
        
        console.log('🎓 عرض خطة البحث جاهز - نظام الألوان الجديد');
        console.log('🎨 الألوان: Primary #2c3e50, Secondary #3498db, Accent #2ecc71');
    </script>
</body>
</html>
